{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"noImplicitAny": false,
		"outDir": "dist/backend",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"module": "commonjs",
		"target": "ES6",
		"typeRoots": [
			"src/backend/types",
			"node_modules/@types"
		]
	},
	"include": [
		"src/backend"
	],
	"exclude": [
		"node_modules",
		"src/frontend"
	]
}